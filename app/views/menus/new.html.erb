<p class="NewMenus-title">New Menu! </p>

<section class="MenusNew">
  <%= form_with url: menus_path do |form| %>
    <div class="Form-section">
      <p class="FormInput-label">Name:</p>
      <%= form.text_field :name, class: "Form-Input", autofocus: "autofocus" %>
    </div>
    <div class="Form-section">
      <%= form.submit "Create!", class: "Form-submit" %>
    </div>
  <% end %>
</section>
