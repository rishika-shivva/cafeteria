<main class="MenuitemPageMain">
    <article>
      <h1 class="MenuitemPage-title"> Menuitems-list </h1>
      <%= form_with(url: "/menuitems", method: "POST", class: "AddMenuitem") do%>
        <%= text_field_tag 'name', nil,
                            autofocus:"autofocus",
                            placeholder: "Name",
                            class: "AddMenuitem-text"
        %>
        <%= text_field_tag 'description', nil,
                            placeholder: "Description",
                            class: "AddMenuitem-text"
        %>
        <%= text_field_tag 'price', nil,
                            placeholder: "Price",
                            class: "AddMenuitem-text"
        %>
        <%= text_field_tag 'diet_type', nil,
                            placeholder: "Veg/Non-Veg",
                            class: "AddMenuitem-text"
        %>
        <%= submit_tag 'Add', class: "AddMenuitem-button" %>
      <% end %>

      <%= render partial: "menuitems/menuitem-section", locals: {
        section_title: "Vegetarian",
        menuitems: @menuitems.vegetarian,
        } %>
      <%= render partial: "menuitems/menuitem-section", locals: {
        section_title: "Non-Vegetarian",
        menuitems: @menuitems.nonvegetarian,
        } %>
    </article>
  </main>
